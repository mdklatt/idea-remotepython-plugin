<idea-plugin url="https://github.com/mdklatt/idea-remotepython-plugin">
  <name>Remote Python</name>
  <vendor email="mdklatt@alumni.ou.edu">Michael Klatt</vendor>
  <id>dev.mdklatt.idea.remotepython</id>

  <!-- The <version>, <description>, <idea-version>, and <changes-notes>
       elements are inserted on build by the Gradle build script. -->

  <!-- See https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <configurationType implementation="dev.mdklatt.idea.remotepython.run.RemotePythonConfigurationType"/>
  </extensions>

</idea-plugin>
